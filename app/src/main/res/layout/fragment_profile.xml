<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/over_all_bg_color"
    tools:context=".Fragments.Profile"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/manageOrders"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/cards"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/wallet_labels"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:includeFontPadding="false"
                        android:text="Pick Up"
                        android:textColor="@color/cardtitle"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/wallet_descs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wallet_labels"
                        android:fontFamily="@font/montserrat"
                        android:includeFontPadding="false"
                        android:text="Request for a Trash / Yugi Pick-Up or Collection "
                        android:textColor="@color/carddescript"
                        android:textSize="12sp" />



                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/request_pickup"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Request Pickup"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:transitionName="account_change"
                        app:strokeColor="@color/white"
                        app:strokeWidth="1dp" />

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/cards"
                app:cardCornerRadius="5dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="20dp">



                    <TextView
                        android:id="@+id/wallet_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:includeFontPadding="false"
                        android:text="Report"
                        android:textColor="@color/cardtitle"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/wallet_credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wallet_labels"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="Report any Issue about Trash / Yugi"
                        android:textColor="@color/carddescript"
                        android:textSize="12sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/request_report"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Report"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:transitionName="account_change"
                        app:strokeColor="@color/white"
                        app:strokeWidth="1dp" />

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>


</ScrollView>